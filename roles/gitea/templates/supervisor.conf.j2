[program:{{ gitea_service }}]
directory=/home/{{ gitea_user }}/go/src/github.com/go-{{ gitea_service }}/{{ gitea_service }}/
command=/home/{{ gitea_user }}/go/src/github.com/go-{{ gitea_service }}/{{ gitea_service }}/{{ gitea_service }} web
autostart=true
autorestart=true
startsecs=10
stdout_logfile=/var/log/{{ gitea_service }}/stdout.log
stdout_logfile_maxbytes=1MB
stdout_logfile_backups=10
stdout_capture_maxbytes=1MB
stderr_logfile=/var/log/{{ gitea_service }}/stderr.log
stderr_logfile_maxbytes=1MB
stderr_logfile_backups=10
stderr_capture_maxbytes=1MB
user = {{ gitea_user }}
environment = HOME="/home/{{ gitea_user }}", USER="{{ gitea_user }}"
